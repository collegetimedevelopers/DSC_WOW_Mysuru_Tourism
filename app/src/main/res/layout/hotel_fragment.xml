<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MysuruTourism.Hotel"
    tools:context=".UI.Hotel.HotelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            android:paddingStart="4dp"
            android:paddingTop="15dp"
            android:paddingEnd="9dp"
            android:paddingBottom="2dp"
            android:text="Hotels"
            android:textColor="#5A5454"
            android:textStyle="bold"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="3dp"
            android:id="@+id/hotel_recycler_hotel"
            android:orientation="horizontal"
            android:padding="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            android:paddingStart="4dp"
            android:paddingTop="15dp"
            android:paddingEnd="9dp"
            android:paddingBottom="2dp"
            android:text="Restaurants"
            android:textColor="#5A5454"
            android:textStyle="bold"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="3dp"
            android:id="@+id/hotel_recycler_restaurant"

            android:orientation="horizontal"
            android:padding="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            android:paddingStart="4dp"
            android:paddingTop="15dp"
            android:paddingEnd="9dp"
            android:paddingBottom="2dp"
            android:text="Local Markets"
            android:textColor="#5A5454"
            android:textStyle="bold"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="3dp"
            android:orientation="horizontal"
            android:padding="5dp" />

    </LinearLayout>

</ScrollView>