<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="320dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:id="@+id/layout_home_hotel_nearby_img"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:text="Name of the palce"
            android:layout_weight="0.15"
            android:textStyle="bold"
            android:textSize="16sp"

            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="#CFCCCC"
            android:background="#191717"
            android:id="@+id/layout_home_hotel_nearby_name"
            android:layout_gravity="bottom"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Price Range"
            android:layout_weight="0.15"
            android:textStyle="bold"
            android:textSize="14sp"

            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="#E1DCDC"
            android:background="#191717"
            android:id="@+id/layout_home_hotel_nearby_price"
            android:layout_gravity="bottom"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>